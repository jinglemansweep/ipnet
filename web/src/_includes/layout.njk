<!DOCTYPE html>
<html lang="en" x-data="{ darkMode: true }" :class="{ 'dark': darkMode }">
{% include "head.njk" %}
<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
    <!-- Skip to main content -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary text-white px-4 py-2 rounded-md z-50">
        Skip to main content
    </a>

    {% include "navigation.njk" %}

    <!-- Main Content -->
    <main id="main-content"{% if alpineData %} x-data="{{ alpineData }}()"{% endif %}>
        {{ content | safe }}
    </main>

    {% include "footer.njk" %}

    <!-- JavaScript -->
    <script src="{{ '/assets/js/app.js' | url }}"></script>
    {{ extraScripts | safe }}
</body>
</html>